<Window x:Class="Snake3.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Налаштування" Height="200" Width="300">
    <Grid Background="#FF9AB705">
        <Button x:Name="btnEasy" Content="Легкий" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,20,0,0" Click="btnEasy_Click" Background="#FFE6FF7D"/>
        <Button x:Name="btnMedium" Content="Середній" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,70,0,0" Click="btnMedium_Click" Background="#FFE7FF80"/>
        <Button x:Name="btnHard" Content="Важкий" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,120,0,0" Click="btnHard_Click" Background="#FFF8FF75"/>
    </Grid>
</Window>
