<Window x:Class="Snake3.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background.png"/>
        </Grid.Background>


        <Button x:Name="btnStartGame" Content="Почати гру" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,115,0,0" Click="btnStartGame_Click" Background="#FFEEF798"/>
        <Button x:Name="btnSettings" Content="Налаштування" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Click="btnSettings_Click" Margin="0,167,0,0" Background="#FFF5FF97"/>
    </Grid>
</Window>